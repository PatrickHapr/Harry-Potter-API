<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#f5f5f5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hogwarts Info"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#2c3e50"
        android:layout_marginBottom="40dp" />

    <Button
        android:id="@+id/btnSearchCharacter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar Personagem por ID"
        android:textSize="16sp"
        android:layout_margin="8dp"
        android:onClick="searchCharacterById" />

    <Button
        android:id="@+id/btnSearchStaff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Listar Professores"
        android:textSize="16sp"
        android:layout_margin="8dp"
        android:onClick="searchStaff" />

    <Button
        android:id="@+id/btnSearchStudents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estudantes por Casa"
        android:textSize="16sp"
        android:layout_margin="8dp"
        android:onClick="searchStudentsByHouse" />

    <Button
        android:id="@+id/btnViewSpells"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver FeitiÃ§os"
        android:textSize="16sp"
        android:layout_margin="8dp"
        android:onClick="viewSpells" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sair"
        android:textSize="16sp"
        android:layout_margin="8dp"
        android:onClick="exitApp" />

</LinearLayout>